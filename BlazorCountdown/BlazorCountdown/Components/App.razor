    <script>
        window.getBrowserDateTime = () => {
            const now = new Date();
            return {
                year: now.getFullYear(),
                month: now.getMonth() + 1, // Month is 0-based
                day: now.getDate(),
                hour: now.getHours(),
                minute: now.getMinutes(),
                second: now.getSeconds()
            };
        };
    </script>

